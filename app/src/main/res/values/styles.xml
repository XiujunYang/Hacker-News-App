<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    
    <style name="MainContentText">
        <item name="android:textColor">@color/colorText</item>
        <item name="android:textSize">@dimen/text_size_main</item>
    </style>

    <style name="SecondContentText">
        <item name="android:textColor">@color/colorTextSuppliment</item>
        <item name="android:gravity">left</item>
        <item name="android:textSize">@dimen/text_size_supplement</item>
    </style>

</resources>
