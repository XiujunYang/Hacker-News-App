<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:paddingTop="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_horizontal_margin"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout style="@style/SecondContentText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView android:id="@+id/comment_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="[null]"/>
        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" "/>
        <TextView android:id="@+id/comment_postTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="[null]"/>
    </LinearLayout>
    <TextView style="@style/MainContentText"
        android:id="@+id/comment_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>